# ============================================
# AWS RDS PRODUCTION - DATABASE CONFIGURATION
# ============================================
DB_USER=postgres
DB_PASSWORD=your_aws_rds_password
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=ecommerce_db

# Database Connection Pool Settings
# Production recommended settings
DB_POOL_MAX=30        # Max connections in pool (increased for production)
DB_POOL_MIN=10        # Min connections to maintain
DB_STATEMENT_TIMEOUT=30000  # Query timeout (ms) on server
DB_QUERY_TIMEOUT=30000      # Query timeout (ms) on client

# ============================================
# AWS PRODUCTION SERVER CONFIGURATION
# ============================================
NODE_ENV=production
PORT=5000
CORS_ORIGIN=https://your-frontend-domain.com
SWAGGER_HOST=your-api-endpoint.amazonaws.com

# ============================================
# LOGGING CONFIGURATION
# ============================================
LOG_LEVEL=WARN                # ERROR|WARN|INFO|DEBUG (WARN for production)

# ============================================
# RATE LIMITING (Production settings)
# ============================================
RATE_LIMIT_WINDOW_MS=900000   # Time window in ms (15 minutes)
RATE_LIMIT_MAX_REQUESTS=200   # Max requests per window per IP

# ============================================
# STARTUP CONFIGURATION
# ============================================
SEED_ON_STARTUP=false         # DO NOT populate test data in production

# ============================================
# AWS CONFIGURATION
# ============================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================
# SSL/TLS CONFIGURATION (Optional)
# ============================================
# Use SSL for RDS connection (recommended)
DB_SSL=true

# ============================================
# MONITORING & PERFORMANCE
# ============================================
# Enable query logging for CloudWatch
ENABLE_QUERY_LOGGING=true

# Enable performance metrics
ENABLE_METRICS=true